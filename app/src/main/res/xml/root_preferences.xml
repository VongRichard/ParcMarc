<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_notifications_24"
        app:title="Notifications">

        <SeekBarPreference
            app:defaultValue="50"
            app:key="volume_nofitications"
            app:showSeekBarValue="true"
            app:title="Volume" />

        <SwitchPreference
            app:key="notifications"
            app:summaryOff="You will recieve all notifications"
            app:summaryOn="You will no longer recieve notifications"
            app:title="Disable notifications" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_info_24"
        app:key="about"
        app:title="About">

        <Preference
            app:key="version"
            app:summary="1.0.0"
            app:title="Build version" />

    </PreferenceCategory>

</PreferenceScreen>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_notifications_24"
        app:title="Dark Mode">

        <SwitchPreference
            app:key="darkmode"
            app:summaryOff="Enable Dark Mode"
            app:summaryOn="Disable Dark Mode"
            app:title="Toggle Dark Mode" />

    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_info_24"
        app:key="about"
        app:title="About">

        <Preference
            app:key="version"
            app:summary="1.0.0"
            app:title="Build version" />

    </PreferenceCategory>

</PreferenceScreen>